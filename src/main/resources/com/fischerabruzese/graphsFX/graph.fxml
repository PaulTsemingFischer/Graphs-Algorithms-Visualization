<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fischerabruzese.graphsFX.Controller">
   <children>
      <Pane fx:id="pane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: lightgray;" HBox.hgrow="ALWAYS" />
      <VBox alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="150.0" HBox.hgrow="ALWAYS">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Graph Presets" />
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#preset1Pressed" text="1" />
                  <Button mnemonicParsing="false" onAction="#preset2Pressed" text="2" />
                  <Button mnemonicParsing="false" onAction="#preset3Pressed" text="3" />
                  <Button mnemonicParsing="false" onAction="#preset4Pressed" text="4" />
                  <Button mnemonicParsing="false" onAction="#preset5Pressed" text="5" />
                  <Button mnemonicParsing="false" onAction="#preset6Pressed" text="6" />
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mf0Pressed" text="Misc func 0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <HBox>
               <children>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#randomizePressed" text="Randomize">
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                  </Button>
                  <ToggleButton alignment="TOP_RIGHT" mnemonicParsing="false" prefWidth="58.0" text="Disjoint" />
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#redrawPressed" text="Redraw">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Button>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="From vertex:" />
                  <Label text="To vertex:" GridPane.rowIndex="1" />
                  <Label text="Weight:" GridPane.rowIndex="2" />
                  <TextField fx:id="fromVertexField" GridPane.columnIndex="1" />
                  <TextField fx:id="toVertexField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Button fx:id="editEdgeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#editEdgePressed" text="Edit edge" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</HBox>
